<h3>Dahua Overlay Settings</h3>
<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Host') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.dahuacamoverlay.host">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('User') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.dahuacamoverlay.user">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Password') }}</label>
        <div class="controls">
            <input type="password" class="input-block-level" data-bind="value: settings.plugins.dahuacamoverlay.password">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Use M73 info') }}</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level" data-bind="checked: settings.plugins.dahuacamoverlay.useM73">
        </div>
    </div>

</form>
